<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:src="@mipmap/ic_launcher_foreground" />

        <TextView
            android:id="@+id/fullname_profile_update_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="130dp"
            android:paddingTop="5dp"
            android:text="FirstName LastName"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="280dp"
        android:text="Enter Old Pin :"
        android:textSize="20dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/oldpin_profile_change_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="270dp"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:textSize="20dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="350dp"
        android:text="Enter New Pin :"
        android:textSize="20dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/newpin_profile_change_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="340dp"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="420dp"
        android:text="Confirm New Pin :"
        android:textSize="20dp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/confirmpin_profile_change_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="410dp"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:textSize="20dp" />


    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="500dp"
        android:background="@android:color/transparent"
        android:onClick="changePin"
        android:text="Change Pin"
        android:textColor="@color/colorPrimary"
        android:textSize="20dp"
        android:textStyle="bold" />


</RelativeLayout>