<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="130dp"
            android:src="@mipmap/ic_launcher_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="100dp"
            android:text="FirstName LastName"
            android:id="@+id/fullname_profile_update"
            android:textSize="20dp" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="215dp"
        android:textStyle="bold"
        android:text="First Name :" />

    <EditText
        android:id="@+id/firstName_profile_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="190dp"
        android:layout_marginRight="10dp"
        android:textAlignment="center"

        android:layout_marginTop="205dp"
        android:textColor="@android:color/darker_gray"
        android:text="FirstName" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="270dp"
        android:textStyle="bold"
        android:text="Last Name :" />

    <EditText
        android:id="@+id/lastName_profile_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="260dp"
        android:textColor="@android:color/darker_gray"
        android:text="LastName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="320dp"
        android:textStyle="bold"
        android:text="Account Number :" />


    <TextView
        android:id="@+id/accountNumber_profile_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="320dp"
        android:layout_marginRight="50dp"
        android:textAlignment="center"
        android:text="00000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="370dp"
        android:textStyle="bold"
        android:text="Account Balance :" />


    <TextView
        android:id="@+id/accountBalance_profile_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="370dp"
        android:layout_marginRight="50dp"
        android:textAlignment="center"
        android:text="100000" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="420dp"
        android:textStyle="bold"
        android:text="Email :" />


    <EditText
        android:id="@+id/email_profile_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="110dp"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:layout_marginTop="410dp"
        android:text="atheeqrc@gmail.com"
        android:textColor="@android:color/darker_gray"/>


    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:onClick="updateProfile"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="500dp"
        android:textColor="@color/colorPrimary"

        android:background="@android:color/transparent"
        android:textStyle="bold"
        android:text="Confirm Changes" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:onClick="deleteUser"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="550dp"
        android:textColor="@color/colorPrimary"

        android:background="@android:color/transparent"
        android:textStyle="bold"
        android:text="Delete Account"  />




</RelativeLayout>