<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:paddingTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="130dp"
            android:src="@mipmap/ic_launcher_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:textColor="@color/white"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="100dp"
            android:text="FirstName LastName"
            android:id="@+id/fullname_profile_update_password"
            android:textSize="20dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="280dp"
        android:textStyle="bold"
        android:text="Enter Old Password :" />


    <EditText
        android:id="@+id/oldpass_profile_change_password"
        android:layout_width="match_parent"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginLeft="225dp"
        android:layout_marginTop="270dp"
         />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="350dp"
        android:textStyle="bold"
        android:text="Enter New Password :" />


    <EditText
        android:id="@+id/newpass_profile_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:textSize="20dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="340dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="420dp"
        android:textStyle="bold"
        android:text="Confirm Password :" />


    <EditText
        android:id="@+id/confirmpass_profile_change_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginLeft="220dp"
        android:inputType="textPassword"
        android:layout_marginTop="410dp"
        />





    <Button
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginLeft="90dp"
        android:onClick="changePassword"
        android:layout_marginTop="500dp"
        android:textColor="@color/colorPrimary"

        android:background="@android:color/transparent"
        android:textStyle="bold"
        android:text="Change Password" />






</RelativeLayout>